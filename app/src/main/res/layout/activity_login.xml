<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="An E-commerce And M-commerce Platform For Farmer"
        android:textColor="#127600"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/m"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn1"
        android:fontFamily="serif"
        android:gravity="center"
        android:inputType="textPersonName"
        android:hint="Enter Username"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:textColor="#000"
        android:textSize="17sp"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn1"
        android:fontFamily="serif"
        android:textColor="#000"
        android:textColorHint="#000"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:hint="Enter Password"
        android:gravity="center"
        android:textSize="17sp"/>

    <RadioGroup
        android:id="@+id/rgUserType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <RadioButton
            android:id="@+id/rbCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Customer"
            android:textColor="#000"
            android:checked="true"
            android:textSize="17sp"
            android:textStyle="bold" />
        <RadioButton
            android:id="@+id/rbSupplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Delivery Person"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="17sp"
        android:fontFamily="serif"
        android:layout_margin="5dp"
        android:background="@drawable/btn2"
        android:text="Login"
        android:onClick="login"
        android:textStyle="bold"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Forgot Password?"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#f20200"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Not register Yet? Click Here To Register"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#127600"
        android:textSize="17sp"/>
</LinearLayout>
