<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SupplierActivity">

    <!--<ImageView-->
        <!--android:id="@+id/ivImage"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_margin="10dp" />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Confirmation of Delivery Person"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Product Name: "
        android:textColor="#127600"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Total Cost: "
        android:textColor="#ff000b"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvQtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="product Quantity : "
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvOrderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Order Date: "
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvDeliveryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Delivery Date: "
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>
    <CheckBox
        android:id="@+id/chDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:layout_gravity="center"
        android:text="Yes I Complete My Specific Delivery"
        android:textColor="#ff000b"
        android:textSize="17sp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textSize="17sp"
        android:fontFamily="serif"
        android:layout_margin="15dp"
        android:background="@drawable/btn2"
        android:text="Click Here to Save"
        android:onClick="save"
        android:textStyle="bold"
        android:textColor="#fff"/>


</LinearLayout>